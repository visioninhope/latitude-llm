{
  "name": "@latitude-data/core",
  "version": "0.0.1",
  "description": "Latitude core contains core services used across the latitude LLM stack",
  "main": "src/index.ts",
  "type": "module",
  "exports": {
    ".": "./src/index.ts",
    "./browser": "./src/browser.ts"
  },
  "scripts": {
    "db:generate": "drizzle-kit generate",
    "db:generate:custom": "pnpm run db:generate --custom",
    "db:migrate": "drizzle-kit migrate --config=./drizzle.config.ts",
    "db:migrate:test": "NODE_ENV=test pnpm run db:migrate",
    "db:drop": "drizzle-kit drop",
    "db:check": "drizzle-kit check",
    "db:studio": "drizzle-kit studio --port 3002",
    "lint": "eslint src",
    "tc": "tsc --noEmit",
    "test": "pnpm run db:migrate:test && vitest run --pool=forks",
    "test:watch": "vitest",
    "prettier": "prettier --write src/**/*.ts"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^0.0.35",
    "@ai-sdk/azure": "^0.0.17",
    "@ai-sdk/mistral": "^0.0.26",
    "@ai-sdk/openai": "^0.0.40",
    "@latitude-data/compiler": "workspace:^",
    "@latitude-data/env": "workspace:^",
    "@t3-oss/env-core": "^0.10.1",
    "ai": "^3.3.3",
    "bcrypt": "^5.1.1",
    "drizzle-kit": "^0.22.8",
    "drizzle-orm": "0.31.4",
    "lodash-es": "^4.17.21",
    "uuid": "^10.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "@latitude-data/eslint-config": "workspace:*",
    "@latitude-data/typescript-config": "workspace:*",
    "@types/bcrypt": "^5.0.2",
    "@types/json-schema": "^7.0.15",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^20.14.10",
    "eslint-plugin-drizzle": "^0.2.3",
    "pg-transactional-tests": "^1.0.9",
    "supertest": "^7.0.0",
    "vitest": "^2.0.3"
  }
}
